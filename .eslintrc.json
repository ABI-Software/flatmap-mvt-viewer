{
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "backticks", { "avoidEscape": true }],
        "quotes": ["error", "double", { "avoidEscape": true }],
        "quotes": ["off", "single", { "avoidEscape": true }]
    }
}
